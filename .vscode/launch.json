    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-AccountingDilemmaApplication<accountingdilemma>",
            "request": "launch",
            "mainClass": "com.jcou.accountingdilemma.AccountingDilemmaApplication",
            "projectName": "accountingdilemma"
        },
        {
            "type": "java",
            "name": "Run with Default Test File",
            "request": "launch",
            "mainClass": "com.jcou.accountingdilemma.AccountingDilemmaApplication",
            "projectName": "accountingdilemma",
            "args": ["${workspaceFolder}\\src\\test\\resources\\default-test-file.txt"]
        },
        {
            "type": "java",
            "name": "Run with No Solution Test File",
            "request": "launch",
            "mainClass": "com.jcou.accountingdilemma.AccountingDilemmaApplication",
            "projectName": "accountingdilemma",
            "args": ["${workspaceFolder}\\src\\test\\resources\\valid-no-solution.txt"]
        }
    ]
}